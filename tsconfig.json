{
  "compilerOptions": {
    "declaration": true,
    "module": "ES2022",
    "target": "ES2022",
    "incremental": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node16",
    "stripInternal": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
  ]
}
   